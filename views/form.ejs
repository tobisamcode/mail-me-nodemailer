<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Mail Me</title>
  </head>
  <body>
    <div class="form-container">
      <form action="" class="contact-form">
        <h2>CONTACT</h2><br><br />
        <label for="name">Enter your full name<span>*</span></label>
        <input
          type="text"
          id="name"
          placeholder="Enter your full name"
          required
        />
        <br />
        <br>
        <label for="email">Enter your email<span>*</span></label>
        <input
          type="email"
          id="email"
          placeholder="Enter your email address"
          required
        />
  <br />
  <br>
        <label for="subject">Enter your subject<span>*</span></label>
        <input type="text" id="subject" placeholder="Subject" required /> <br />
        <br>
        <label for="message">Enter your message here!<span>*</span></label>
        <textarea
          type="text"
          id="message"
          cols="30"
          rows="10"
          placeholder="message"
          required
        ></textarea>
        <br />
        <input type="submit" class="submit" value="Send Message" />
      </form>
    </div>

    <script src="/js/app.js"></script>
  </body>
</html>
